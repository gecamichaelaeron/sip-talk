# ========================================
# SipTalk Coffee Shop - Environment Variables Template
# Copy this file to .env and update the values
# ========================================

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sip_talk_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Application Configuration
APP_PORT=8080
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# API Configuration
API_BASE_URL=http://localhost:8080/api
CORS_ORIGIN=http://localhost:3000

# pgAdmin Configuration (Development only)
PGADMIN_EMAIL=admin@siptalk.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Session & Security
SESSION_SECRET=your_random_session_secret_here
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@siptalk.com

# ========================================
# Render.com Deployment
# ========================================
RENDER_SERVICE_NAME=siptalk-api
RENDER_REGION=oregon

# ========================================
# Netlify Deployment
# ========================================
NETLIFY_SITE_NAME=siptalk-coffeeshop
VITE_API_URL=https://your-render-app.onrender.com/api

